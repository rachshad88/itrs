pangalan ng database ay : itrs

paste mo nalang tong query para magawa yung tables

CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) NOT NULL UNIQUE,
    password CHAR(32) NOT NULL, -- store MD5 hash
    full_name VARCHAR(100) NOT NULL,
    role ENUM('ADMIN','TECHNICIAN') NOT NULL,
    status ENUM('AVAILABLE','BUSY') DEFAULT 'AVAILABLE'
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

CREATE TABLE requests (
    id INT AUTO_INCREMENT PRIMARY KEY,
    request_code VARCHAR(20) NOT NULL UNIQUE,
    client_name VARCHAR(120) NOT NULL,
    assigned_to INT NULL,
    office VARCHAR(120) NOT NULL,
    unit VARCHAR(120) NULL,
    semester VARCHAR(50) NULL,
    issue TEXT NOT NULL,
    remarks TEXT NULL,
    recommendation TEXT NULL,
    status ENUM('PENDING','IN_PROGRESS','DONE') DEFAULT 'PENDING',
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    completed_at TIMESTAMP NULL,
    
    FOREIGN KEY (assigned_to) REFERENCES users(id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

